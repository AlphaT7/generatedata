{
  "compilerOptions": {
    "lib": ["es6", "dom", "esnext"],
    "outDir": "./dist/",
	"sourceMap": true,
	"esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
	"jsx": "react",
	"allowSyntheticDefaultImports": true,
	"removeComments": false
  },
  "exclude": ["node_modules"]
}
